<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.philipshueremote">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_configs"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Init.Activities.HueInitActivity" />
        <activity android:name=".MainUI.MainAppActivity" />
        <activity
            android:name=".MainUI.MainSettingActivity"
            android:label="@string/title_activity_main_setting"></activity>
    </application>

</manifest>