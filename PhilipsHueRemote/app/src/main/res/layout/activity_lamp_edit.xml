<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainUI.Activities.LampEditActivity">

    <com.larswerkman.holocolorpicker.ColorPicker
        android:id="@+id/Main_edit_colorpicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <com.larswerkman.holocolorpicker.SaturationBar
        android:id="@+id/Main_edit_saturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/Main_edit_colorpicker"
        app:layout_constraintStart_toStartOf="@+id/Main_edit_colorpicker"
        app:layout_constraintTop_toBottomOf="@+id/Main_edit_colorpicker" />

</android.support.constraint.ConstraintLayout>